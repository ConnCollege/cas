						<lookup-method name="create" bean="resetResource"/>
					</bean>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="resetResource" class="edu.conncoll.cas.restlet.RestResource" scope="prototype">
		<property name="container" ref="db4oContainer" />
	</bean>
	
