<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	    				  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						  http://www.springframework.org/schema/context 
						  http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:annotation-config/>
	
	<!-- include configuration file and camelJDBC -->
	<import resource="spring-configuration/propertyFileConfigurer.xml" />
	<import resource="spring-configuration/camelJDBC.xml" />
	
	<!-- create list of accepted domains -->
	<bean id="camelDev" class="java.lang.String">
		<constructor-arg value="https://cameldev.conncoll.edu" />
	</bean>
	<bean id="camelWeb" class="java.lang.String">
		<constructor-arg value="https://camelweb.conncoll.edu" />
	</bean>
	<bean id="acceptedDomains" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="camelDev" />
				<ref bean="camelWeb" />
			</list>
		</constructor-arg>
	</bean>
	
	<!-- create a filter to added needed header information to the response -->
	<bean id="root" class="edu.conncoll.cas.restlet.RestHeader" p:acceptedDomains-ref="acceptedDomains">
		<property name="next" ref="route" />
	</bean>
	
	<!-- This is where routes will be defined -->
	<bean id="route" class="org.restlet.ext.spring.SpringRouter">
		<property name="attachments">
			<map>
				<entry key="/reset/">
					<bean class="org.restlet.ext.spring.SpringFinder">
						<lookup-method name="createResource" bean="restResource" />
					</bean>
				</entry>
				<entry key="/peci/">
					<bean class="org.restlet.ext.spring.SpringFinder">
						<lookup-method name="createResource" bean="PECIResource" />
					</bean>
				</entry>
			</map>
		</property>
	</bean>
	
	<!-- create a bean for the actual rest resources -->
	<bean id="restResource" class="edu.conncoll.cas.restlet.RestResource" scope="prototype" p:camelJdbc-ref="jdbcCamel" />
	<bean id="peciResource" class="edu.conncoll.cas.restlet.PECIResource" scope="prototype" p:camelJdbc-ref="jdbcCamel" />
	
</beans>